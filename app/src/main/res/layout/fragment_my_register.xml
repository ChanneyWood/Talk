<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e9eb"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:id="@+id/my_register_layout_name"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/my_register_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="  用户名  " />

        <EditText

            android:id="@+id/my_register_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/my_register_tv_name"
            android:layout_marginLeft="30dp"
            android:textCursorDrawable="@drawable/color_cursor" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:id="@+id/my_register_layout_password"
        app:layout_constraintTop_toBottomOf="@id/my_register_layout_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_register_tv_password"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="     密码    " />

        <EditText
            android:id="@+id/my_register_password"
            android:layout_width="220dp"
            android:layout_toRightOf="@+id/my_register_tv_password"
            android:layout_marginLeft="30dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/my_register_layout_password">

        <Button
            android:id="@+id/my_register_btn_register"
            android:layout_width="80dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text=" 注册 " />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
