<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:gravity="top"
                android:id="@+id/s_tv"/>
        </LinearLayout>

    </ScrollView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/select_emotion1"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/emotion1"
            android:text="伤心到流泪"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/select_emotion2"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/emotion2"
            android:text="很受伤"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/select_emotion3"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/emotion3"
            android:text="惊讶∑( 口 ||"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/select_emotion4"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/emotion4"
            android:text="我想静静"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/select_emotion5"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/emotion5"
            android:text="不失礼貌"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/select_emotion6"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/emotion6"
            android:text="生活真勉强"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_delete"
            android:layout_weight="1"
            android:text="删除"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_back"
            android:layout_weight="1"
            android:text="返回"/>

    </LinearLayout>
</LinearLayout>
